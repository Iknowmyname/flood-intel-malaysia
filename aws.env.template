# Public entrypoint
FRONTEND_PORT=80

# Frontend runtime API URL (served via env.js)
API_BASE_URL=/api/ask

# API routing mode
APP_MODE=auto

# Internal service wiring
SERVICES_RAG_BASE_URL=http://rag:8000
SERVICES_EXPRESS_BASE_URL=https://flood-monitoring-system.onrender.com
EXPRESS_BASE_URL=https://flood-monitoring-system.onrender.com

# RAG retrieval and ingestion tuning
RAG_TOP_K=4
RAG_MIN_SCORE=0.1
RAG_USE_LLM=false
AUTO_INGEST_ON_STARTUP=true
AUTO_INGEST_REFRESH_SECONDS=600
EXPRESS_DEFAULT_LIMIT=1000

# Optional Ollama settings (used when RAG_USE_LLM=true)
OLLAMA_BASE_URL=http://host.docker.internal:11434
OLLAMA_MODEL=mistral
OLLAMA_TIMEOUT=120
OLLAMA_RETRIES=2

# Chroma persistence path on host (map this to EBS mount path in EC2)
CHROMA_HOST_PATH=./.data/chroma
CHROMA_COLLECTION=readings
